@model IEnumerable<MusicApp.Models.Music>
@using MusicApp.Helpers

<p>
    @Html.ActionLink("Create New", "NewMusic")
</p>

<h3>Past & Current Music</h3>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.MusicName)</th>
        <th>@Html.DisplayNameFor(model => model.PublishedYear)</th>
        <th>@Html.DisplayNameFor(model => model.ReleasedDate)</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(m => m.ReleasedDate <= DateTime.Now))
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MusicName)</td>
            <td>@Html.DisplayFor(modelItem => item.PublishedYear)</td>
            <td>@Html.DisplayFor(modelItem => item.ReleasedDate)</td>
            <td>
                @Html.ActionLink("Edit", "UpdateMusic", new { id = CommonHelper.EncryptId(item.MusicId) }) |
                @Html.ActionLink("Details", "GetMusic", new { id = CommonHelper.EncryptId(item.MusicId) }) |
                @Html.ActionLink("Delete", "DeleteMusic", new { id = CommonHelper.EncryptId(item.MusicId) })
            </td>
        </tr>
    }
</table>

<h3>Upcoming Music</h3>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.MusicName)</th>
        <th>@Html.DisplayNameFor(model => model.PublishedYear)</th>
        <th>@Html.DisplayNameFor(model => model.ReleasedDate)</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(m => m.ReleasedDate > DateTime.Now))
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MusicName)</td>
            <td>@Html.DisplayFor(modelItem => item.PublishedYear)</td>
            <td>@Html.DisplayFor(modelItem => item.ReleasedDate)</td>
            <td>
                @Html.ActionLink("Edit", "UpdateMusic", new { id = CommonHelper.EncryptId(item.MusicId) }) |
                @Html.ActionLink("Details", "GetMusic", new { id = CommonHelper.EncryptId(item.MusicId) }) |
                @Html.ActionLink("Delete", "DeleteMusic", new { id = CommonHelper.EncryptId(item.MusicId) })
            </td>
        </tr>
    }
</table>